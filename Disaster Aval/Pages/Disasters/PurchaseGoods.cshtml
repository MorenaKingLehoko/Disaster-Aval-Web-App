@page
@model Disaster_Aval.Pages.Disasters.PurchaseGoodsModel
@{
    ViewData["Title"] = "Purchase Goods";
}

<style>
    body {
        background-color: purple;
        color: white;
    }

    h2 {
        color: orange;
    }

    th {
        color: orange;
    }

    a {
        color: orange;
    }

    .form-group {
        margin: 10px;
    }

    .btn-submit {
        background-color: orange;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid orange;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: orange;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="row text-center">
    <div class="col-sm-6 offset-sm-3">
        <table>
            <thead>
                <tr>
                    <th>DISASTER NAME</th>
                    <th>AVAILABLE MONEY</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var disaster in Model.Disasters)
                {
                    <tr>
                        <td>@disaster.Name</td>
                        <td>@disaster.AvailableMoney</td>
                    </tr>
                }
            </tbody>
        </table>
        <form>
            <div class="form-group">
                <label for="amountSpent">How much are you Spending?</label>
                <input type="text" class="form-control" id="amountSpent" name="amountSpent">
            </div>

            <div class="form-group">
                <label for "disasterAccount">From which disaster's Account?</label>
                <input type="text" class="form-control" id="disasterAccount" name="disasterAccount">
            </div>

            <a asp-page="/Disasters/PurchaseGoods" class="btn-submit">Submit</a>
        </form>
    </div>
</div>
